.row
  .col-md-12
    .page-header
      %h1 Login
.row
  .col-md-12
    .well
      = form_for :session, url: sessions_path, html: { class: 'bs-component' } do |f|
        %fieldset
          .form-group.is-empty
            = f.label :email, class: 'control-label'
            = f.text_field :email, class: 'form-control'
            %span.material-input

          .form-group.is-empty
            = f.label :password, class: 'control-label'
            = f.password_field :password, class: 'form-control'
            %span.material-input

          .form-group
            = f.submit 'Login', class: 'btn btn-primary'
